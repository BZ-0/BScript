{
    "compilerOptions": {
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "BTyped2/*": ["./deps/BTyped2/*"],
            "src/*": ["./src/*"],
            "deps/*": ["./deps/*"],
            "test/*": ["./test/*"],
            "example/*": ["./example/*"],
            "example/browser/*": ["./example/browser/*"],
            "@petamoriken/*": ["./node_modules/@petamoriken/*"],
            "@petamoriken/float16": [
                "./node_modules/@petamoriken/float16/browser/float16.mjs"
            ],
            "cbor-x": ["/cbor-x/index.js"],
            "cbor-x/*": ["./node_modules/cbor-x/*"]
        },
        "moduleResolution": "NodeNext",
        "allowNonTsExtensions": true,
        "allowArbitraryExtensions": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitOverride": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitUseStrict": false,
        "noImplicitGlobalReturn": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnusedLabels": true,
        "allowUnreachableCode": true,
        "noStrictGenericChecks": true
    },
    "include": ["./src/**/*.civet", "./src/**/*.mjs", "./src/**/*.js"]
}
